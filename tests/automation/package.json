{
  "name": "cumroad-clone-tests",
  "version": "1.0.0",
  "description": "Automated tests for CumRoad Clone application",
  "scripts": {
    "test": "playwright test",
    "test:unit": "jest",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:ui": "playwright test --ui",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:system-browser": "playwright test --browser-path=\"C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe\"",
    "install-browsers": "playwright install",
    "install-browsers-deps": "playwright install --with-deps",
    "install-chromium-only": "playwright install chromium"
  },
  "jest": {
    "testMatch": ["**/unit/**/*.test.js"],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
